@model EmployeeApp.PortalWithAuth.Models.EAGClientViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Login</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginClicked">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Enter email</label>
                <input asp-for="Name" class="form-control" />
                
            </div>
            
            
            <div class="form-group">
                <label class="control-label">Enter password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <span class="text-danger">Either the email id or password is invalid</span>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

