@model EmployeeApp.PortalWithAuth.Models.EAGClientViewModel

@{
    ViewData["Title"] = "Create";
}
<html>
    <head>

    </head>
    <body>
    <h1>Registration</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateSave">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" type="tel" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AddressLine1" class="control-label"></label>
                    <input asp-for="AddressLine1" class="form-control" />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressLine2" class="control-label"></label>
                    <input asp-for="AddressLine2" class="form-control" />
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Enter new password</label>
                    <input type="password" class="form-control" id="firstpass" />
                </div>
                <div class="form-group">
                    <label class="control-label">Confirm password</label>
                    <input asp-for="Password" type="password" class="form-control" id="confirmpass" />
                    <span id="passmatchwarning" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <script>
        
        document.getElementById('confirmpass').addEventListener("input", matchPass)
        document.getElementById('confirmpass').addEventListener("input", matchPassblur)
        function matchPass() {
            var firstpass = document.getElementById('firstpass').value
            var confirmpass = document.getElementById('confirmpass').value
            if (firstpass.trim(confirmpass)==false) {
                console.log("inside if statement")
                document.getElementById("passmatchwarning").innerHTML = "Confirm password must match original password"
            }
            if (firstpass.trim(confirmpass)==true) {
                document.getElementById("passmatchwarning").innerHTML = ""
            }

        }
        function matchPassblur() {
            var firstpass = document.getElementById('firstpass').value
            var confirmpass = document.getElementById('confirmpass').value
            if (firstpass.trim(confirmpass) == false) {
                console.log("inside if statement")
                document.getElementById("passmatchwarning").innerHTML = "Confirm password must match original password"
            }
            if (firstpass.trim(confirmpass) == true) {
                document.getElementById("passmatchwarning").innerHTML = ""
            }

        }


    </script>
    </body>


</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
